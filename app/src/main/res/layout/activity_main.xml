<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Management App"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New User"
        android:layout_margin="8dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnDeleteUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete User by ID"
        android:layout_margin="8dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnDisplayUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display User by ID"
        android:layout_margin="8dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnDisplayAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Display All Users"
        android:layout_margin="8dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="By Houssam.co"
        android:layout_marginTop="32dp"
        android:textSize="14sp" />

</LinearLayout>